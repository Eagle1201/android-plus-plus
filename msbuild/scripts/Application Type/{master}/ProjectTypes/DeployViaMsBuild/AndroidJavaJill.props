<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  
  <PropertyGroup Condition="'$(AndroidJavaJillBeforeTargets)' == '' and '$(AndroidJavaJillAfterTargets)' == '' and '$(ConfigurationType)' != 'Makefile'">

    <AndroidJavaJillBeforeTargets></AndroidJavaJillBeforeTargets>

    <AndroidJavaJillAfterTargets>AndroidManifest;AndroidJavaJack</AndroidJavaJillAfterTargets>

  </PropertyGroup>

  <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->

  <ItemDefinitionGroup Condition="'$(UseDebugLibraries)' == 'true'">

    <AndroidJavaJill>

      <GenerateDebuggingInformation Condition="'%(AndroidJavaJill.GenerateDebuggingInformation)' == ''">true</GenerateDebuggingInformation>

    </AndroidJavaJill>

  </ItemDefinitionGroup>

  <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  
  <ItemDefinitionGroup>

    <AndroidJavaJill>

      <OutputFile Condition="'%(AndroidJavaJill.OutputFile)' == ''">$(IntDir)bin\jill\%(Filename).jayce</OutputFile>

      <GenerateDebuggingInformation Condition="'%(AndroidJavaJill.GenerateDebuggingInformation)' == ''">false</GenerateDebuggingInformation>

      <Verbose Condition="'%(AndroidJavaJill.Verbose)' == ''">false</Verbose>

      <!--
        Default TrackedToolTask properties.
      -->

      <TrackerLogDirectory Condition="'%(AndroidJavaJill.TrackerLogDirectory)' == ''">$(TLogLocation)</TrackerLogDirectory>

      <OutputCommandLine Condition="'%(AndroidJavaJill.OutputCommandLine)' == ''">false</OutputCommandLine>

    </AndroidJavaJill>

  </ItemDefinitionGroup>

  <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->

</Project>
