<?xml version="1.0" encoding="utf-8"?>
<ProjectSchemaDefinitions xmlns="http://schemas.microsoft.com/build/2009/properties" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->

  <Rule
    Name="AndroidDalvik"
    PageTemplate="tool"
    DisplayName="Android Dalvik Tool"
    Order="200">

    <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    
    <Rule.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="AndroidDalvik" />
    </Rule.DataSource>

    <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->

    <Rule.Categories>
      <Category Name="General" DisplayName="General" />
    </Rule.Categories>

    <!--
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->

    <!--
      NumberOfThreads
    -->

    <IntProperty 
      Name="NumberOfThreads" 
      DisplayName="Number Of Threads" 
      Category="General" 
      Switch="--num-threads" 
      Separator="="
    />

    <!--
      Optimize
    -->

    <BoolProperty 
      Name="Optimize" 
      DisplayName="Optimize" 
      Category="General" 
      ReverseSwitch="--no-optimize"
    />

    <!--
      Debug
    -->

    <BoolProperty
      Name="Debug"
      DisplayName="Debug"
      Category="General"
      Switch="--debug"
    />

    <!--
      Statistics
    -->

    <BoolProperty 
      Name="Statistics" 
      DisplayName="Statistics" 
      Category="General" 
      Switch="--statistics"
    />

    <!--
      Incremental
    -->

    <BoolProperty
      Name="Incremental"
      DisplayName="Incremental"
      Category="General"
      Switch="--incremental"
    />

    <!--
      Verbose
    -->

    <BoolProperty 
      Name="Verbose" 
      DisplayName="Verbose" 
      Category="General" 
      Switch="--verbose"
    />

    <!--
      OutputFile
    -->

    <StringProperty 
      Subtype="file" 
      Name="OutputFile" 
      DisplayName="Output File" 
      Category="General" 
      Switch="--output=" 
      Separator=""
    />

    <!--
      OutputCommandLine
    -->

    <BoolProperty
      Name="OutputCommandLine"
      DisplayName="Output Command Line"
      Category="General"
    />

    <!--
      TrackerLogDirectory
    -->

    <StringProperty
      Subtype="folder"
      Name="TrackerLogDirectory"
      DisplayName="Tracker Log Directory"
      Description="Tracker Log Directory."
      Category="General"
      IncludeInCommandLine="false"
      Visible="false"
    />

    <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    
    <DynamicEnumProperty
     Name="AndroidDalvikBeforeTargets"
     Category="General"
     EnumProvider="Targets"
     IncludeInCommandLine="False">
      <DynamicEnumProperty.DisplayName>
        <sys:String>Execute Before</sys:String>
      </DynamicEnumProperty.DisplayName>
      <DynamicEnumProperty.Description>
        <sys:String>Specifies the targets for the build customization to run before.</sys:String>
      </DynamicEnumProperty.Description>
      <DynamicEnumProperty.ProviderSettings>
        <NameValuePair
          Name="Exclude"
          Value="^AndroidDalvikBeforeTargets|^Compute" />
      </DynamicEnumProperty.ProviderSettings>
      <DynamicEnumProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType=""
          HasConfigurationCondition="true" />
      </DynamicEnumProperty.DataSource>
    </DynamicEnumProperty>
    
    <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    
    <DynamicEnumProperty
      Name="AndroidDalvikAfterTargets"
      Category="General"
      EnumProvider="Targets"
      IncludeInCommandLine="False">
      <DynamicEnumProperty.DisplayName>
        <sys:String>Execute After</sys:String>
      </DynamicEnumProperty.DisplayName>
      <DynamicEnumProperty.Description>
        <sys:String>Specifies the targets for the build customization to run after.</sys:String>
      </DynamicEnumProperty.Description>
      <DynamicEnumProperty.ProviderSettings>
        <NameValuePair
          Name="Exclude"
          Value="^AndroidDalvikAfterTargets|^Compute" />
      </DynamicEnumProperty.ProviderSettings>
      <DynamicEnumProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType=""
          HasConfigurationCondition="true" />
      </DynamicEnumProperty.DataSource>
    </DynamicEnumProperty>
    
    <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->

  </Rule>

  <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->

  <ItemType Name="AndroidDalvik" DisplayName="Android Dalvik Tool" />

  <FileExtension Name="*.dex" ContentType="AndroidDalvik" />

  <ContentType  Name="AndroidDalvik" DisplayName="Android Dalvik Tool" ItemType="AndroidDalvik" />

  <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->

</ProjectSchemaDefinitions>
